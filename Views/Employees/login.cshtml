@model AhmerMYWebDemo.Models.Employees

@{
    ViewData["Title"] = "login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>login</h1>
<h6>@ViewBag.msg</h6>
<h4>Employees</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="E_Email" class="control-label"></label>
                <input asp-for="E_Email" class="form-control" />
                <span asp-validation-for="E_Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="E_Password" class="control-label"></label>
                <input asp-for="E_Password" class="form-control" />
                <span asp-validation-for="E_Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
